{
  "name": "TYPO3 - Little Helper",
  "version": "1.4.8",
  "manifest_version": 2,
  "description": "This chrome extension makes the work with TYPO3 6.x a little bit easier.",
  "background": {
    "scripts": ["javascripts/jquery-2.1.3.min.js","javascripts/background.js"]
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self'  https://ajax.googleapis.com; object-src 'self'",
  "icons": {
    "128": "images/128.png",
    "64": "images/64.png",
    "48": "images/48.png",
    "32": "images/32.png",
    "16": "images/16.png"
  },
  "browser_action": {
    "default_icon": "images/32.png",
    "default_title": "TYPO3 CMS - Little Helper",
    "default_popup": "popup.html"
  }
}